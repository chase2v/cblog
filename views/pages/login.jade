extends ../layout

block content
	script(type='text/javascript', src='/javascripts/sha1.js')
	script(type='text/javascript', src='/javascripts/login.js')
	.content.login
		.block
			.title Sign in
			form(action='/login', method='post')
				.form-group
					label username
					input.form-control(type='text', name='u')
				.form-group
					label password
					input.form-control(type='password', name='p')
				button.btn.btn-default(type='submit') Login